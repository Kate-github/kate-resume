<div class="container">

    <div class="row">
        <div class="col col-3" id="sidebar">
            <img id="imgProfile" src="images/profile.jpg" width="150" class="rounded-circle">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Skills</h5>
                    <p class="card-text">

                    <ul class="list-group">
                        {{#each data.skills as |skill|}}
                        <li class="list-group-item">
                            <span class="badge badge-secondary">{{skill}}</span>
                        </li>
                        {{/each}}
                    </ul>
                    </p>
                </div>
            </div>

            <div class="card" id="awards">
                <div class="card-body">
                    <h5 class="card-title"> Honor Awards</h5>
                    <p class="card-text">

                    <ul class="list-group">
                        {{#each data.honor_awards as |honor|}}
                        <li class="list-group-item">
                            <h6 class="">{{honor.award}}</h6>
                            <small>{{honor.company}}</small>
                        </li>
                        {{/each}}
                    </ul>
                    </p>
                </div>
            </div>

            <div class="card" id="languages">
                <div class="card-body">
                    <h5 class="card-title"> Languages</h5>
                    <p class="card-text">

                    <ul class="list-group">
                        {{#each data.languages as |language|}}
                        <li class="list-group-item">
                            <span class="">{{language.name}} - {{language.proficiency}}</span>
                        </li>
                        {{/each}}
                    </ul>
                    </p>
                </div>
            </div>
        </div>
        <div class="col col-9" id="experience">
            <h1>{{data.name}}</h1>
            <p>{{data.description}}</p>
            <div class="container">
                <div class="row">
                    <div class="col col-sm-6">
                        <div>
                            <i class="fa-solid fa-envelope"></i>
                            <a href="mailto:{{data.email}}"> {{data.email}}</a>
                        </div>
                        <span><i class="fa-solid fa-phone"></i> {{data.phone_number}}</span>
                        <div><i class="fa-solid fa-location-pin"></i> {{data.location}}</div>
                    </div>
                    <div class="col col-sm-6">
                        <div>
                            <i class="fa-brands fa-linkedin"></i>
                            <a href="{{data.linkedIn}}">{{data.linkedIn}}</a>
                        </div>
                        <div>
                            <i class="fa-brands fa-github"></i>
                            <a href="{{data.github}}">{{data.github}}</a>
                        </div>

                    </div>
                </div>
            </div>
            <div class="container" id="project-section">
                <div class="row">
                    <div class="col col-md-12">
                        <h2> Class Projects</h2>
                        {{#each data.class_projects as |project|}}
                        <h3>{{project.name}}</h3>
                        {{!-- <h4>{{project.roles.join(', ')}}</h4> --}}
                        <p>{{project.description}}</p>
                        <h5>Technologies Used</h5>
                        <ul class="list-group">
                            {{#each project.technologies as |technology|}}
                            <li class="list-group-item">
                                <span class="">{{technology}}</span>
                            </li>
                            {{/each}}
                        </ul>
                        {{/each}}
                    </div>
                </div>
            </div>
            <div class="container" id="work-section">
                <div class="row">
                    <div class="col col-md-12">
                        <h2> Work Experience</h2>
                        {{#each data.work_experience as |work|}}
                        <h3>{{work.company}}</h3>
                        <h4>{{work.title}}</h4>

                        <div class="row">
                            <div class="col-6">{{work.start_date}} - {{work.end_date}}</div>
                            <div class="col-6 work-location">{{work.location}}</div>
                        </div>
                        <p>
                        <ul class="list-group">
                            {{#each work.responsibilities as |responsibility|}}
                            <li class="list-group-item">
                                <span class="">{{responsibility}}</span>
                            </li>
                            {{/each}}
                        </ul>
                        </p>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>